# Production Email Service Environment Configuration
# Add these variables to your .env file for production email deployment

# === GENERAL EMAIL SETTINGS ===
NODE_ENV=production
ENABLE_EMAIL_SENDING=true
FROM_EMAIL=alerts@globegenius.app
FROM_NAME=GlobeGenius Alerts
EMAIL_WEBHOOK_URL=https://api.globegenius.app/webhooks/email

# === EMAIL RATE LIMITING ===
EMAIL_RATE_LIMIT_HOUR=100
EMAIL_RATE_LIMIT_DAY=1000

# === EMAIL PROVIDER SELECTION ===
# Choose one: smtp, sendgrid, brevo, aws-ses
EMAIL_PROVIDER=sendgrid

# === SENDGRID CONFIGURATION ===
# Get API key from: https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=SG.your_sendgrid_api_key_here

# === BREVO (SENDINBLUE) CONFIGURATION ===
# Get API key from: https://app.brevo.com/settings/keys/api
BREVO_API_KEY=your_brevo_api_key_here

# === AWS SES CONFIGURATION ===
AWS_REGION=eu-west-1
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here

# === SMTP CONFIGURATION ===
# For custom SMTP servers or providers like Gmail, Outlook, etc.
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_smtp_username
SMTP_PASS=your_smtp_password

# === DEVELOPMENT/TESTING ===
# For development, set EMAIL_PROVIDER=smtp and use local testing
# SMTP_HOST=localhost
# SMTP_PORT=1025
# SMTP_USER=test
# SMTP_PASS=test

# === WEBHOOK AUTHENTICATION ===
# For email tracking webhooks (optional)
EMAIL_WEBHOOK_SECRET=your_webhook_secret_for_verification
